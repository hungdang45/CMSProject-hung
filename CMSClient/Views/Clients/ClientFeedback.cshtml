@model CMSProject.Models.Feedback

@{
    ViewBag.Title = "ClientFeedback";
    Layout = "~/Views/Shared/customer.cshtml";
}


<style>
    .message-success {
        color: aliceblue;
        background-color: green;
    }
</style>
<style>
    textarea.form-control {
        height: 100px;
        margin-bottom: 120px;
    }
</style>
@if (ViewBag.messageSuccess != null)
{
    <p class="message-success">@ViewBag.messageSuccess</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style=" margin-top: 160px;">
        <h4>Phản hồi của khách hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="height:600px;">
            @*@Html.LabelFor(model => model.FeedbackContent, htmlAttributes: new { @class = "control-label col-md-2" })*@
            Nội dung feedback<br>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeedbackContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FeedbackContent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gửi đi" class="btn btn-success" style="margin-top: -920px;" />
            </div>
        </div>
    </div>
}

