@model IEnumerable<CMSProject.Models.Product>

<style>
    .pro {
        text-align: center;
        border:1px solid #808080;
        height:300px;
    }
    .pro:hover{
        box-shadow:2px 2px 10px red;
    }
</style>

@foreach(var item in Model)
{
    <div class="col-md-4 pro">
        <img src="data:image;base64,@System.Convert.ToBase64String(item.ImageUpload)" alt="" style="width:100%; height:150px;" />
        <p>
            <strong>@item.ProductName</strong>
        </p>
        <p style="color:red;">@item.Price.ToString("#,###") VND/Product</p>
        <div class="modal-footer" style="text-align:center;">
            <form action="/Order/CreateProduct/@item.ProductID" method="post">
                <input type="hidden" name="ordId" value="@ViewBag.IdO" />
                <button type="submit" class="btn btn-success">Add</button>
            </form>
        </div>
    </div>
}