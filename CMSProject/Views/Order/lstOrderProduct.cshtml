@model IEnumerable<CMSProject.Models.Carts>

<style>
    th {
        text-align: center;
        background-color: green;
        color: white;
    }

    td {
        text-align: center;
    }
</style>

<table class="table table-bordered">
    <tr>
        <th>Tên sản phẩm</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>
                <form action="/Order/EditQuantity/@item.ProductID" method="post">
                    <input type="hidden" name="IdOr" value="@item.OrderID" />
                    <input type="number" name="Quantitied" min="1" value="@item.Quantity" />
                    <button type="submit"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                </form>
            </td>
            <td>@item.Total.ToString("#,###") VND</td>
            <td>
                <form action="/Order/RemoveProduct/@item.ProductID" method="post">
                    <input type="hidden" name="IdOr" value="@item.OrderID" />
                    <button type="submit" class="btn btn-danger">X</button>
                </form>
            </td>
        </tr>
    }
</table>