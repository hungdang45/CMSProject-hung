@model IEnumerable<CMSProject.Models.Product>

<style>
    .col-md-4{
        display:inline-block;
        margin:-2px !important;
    }
    .col-md-4:hover{
        box-shadow:2px 2px 10px #ff0000;
    }
</style>

@foreach (var item in Model)
{
    <div class="col-md-4" style="text-align:center;border:1px solid #808080;">
        <img src="data:image;base64,@System.Convert.ToBase64String(item.ImageUpload)" style="width:100%;height:200px;padding-top:5px" />
        <p style="text-align:center;"><strong>@item.ProductName</strong></p>
        <div class="modal-footer" style="text-align:center !important;">
            <form action="/GoodsReceipts/LstGoodsReceipt/@item.ProductID" method="post">
                <input type="hidden" name="idGoodsReceipt" value="@ViewBag.idGoodsReceipt" />
                <button type="submit" class="btn btn-success">Select</button>
            </form>
        </div>
    </div>
}
